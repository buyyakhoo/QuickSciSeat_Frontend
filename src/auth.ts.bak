import { SvelteKitAuth } from "@auth/sveltekit"
import Google from "@auth/sveltekit/providers/google"
import { GOOGLE_CLIENT_ID, GOOGLE_CLIENT_SECRET } from "$env/static/private"

export const { handle, signIn, signOut } = SvelteKitAuth({
  providers: [
    Google({
      clientId: GOOGLE_CLIENT_ID,
      clientSecret: GOOGLE_CLIENT_SECRET,
      authorization: {
        params: {
          hd: "kmitl.ac.th"
        }
      }
    })
  ],
  callbacks: {
    async signIn({ user, account, profile }) {
      // ตรวจสอบ email domain
      if (user.email?.endsWith('@kmitl.ac.th') || user.email?.endsWith('@mail.kmitl.ac.th')) {
        return true
      }
      return false
    },
    async session({ session, token }) {
      // เพิ่มข้อมูลเพิ่มเติมใน session
      if (session.user?.email) {
        const email = session.user.email;
        
        // กำหนด role ตาม email
        if (email.endsWith('@mail.kmitl.ac.th')) {
          (session.user as any).role = 'student';
          // แยกรหัสนักศึกษา
          const match = email.match(/^(\d{8})@mail\.kmitl\.ac\.th$/);
          (session.user as any).student_id = match ? match[1] : null;
        } else if (email.includes('admin') || email.includes('it')) {
          (session.user as any).role = 'admin';
          (session.user as any).student_id = null;
        } else {
          (session.user as any).role = 'staff';
          (session.user as any).student_id = null;
        }
      }
      return session
    }
  },
  pages: {
    signIn: '/auth'
  },
  trustHost: true
})